pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
-- space invaders
-- by simone

px = 60
py = 120
rx = 0---1
ry = 0---1


function _update()
 -- tick game state

 if (ry > 0) ry = ry-2

 -- handle input

 if (btn(⬅️) and px > -1) px = px-1
 if (btn(➡️) and px < 121) px = px+1

 if btnp(❎) and ry <= 0 then
  if (ry > 0) return

  rx = px+4
  ry = py-1
 end
end


function _draw()
 cls()
 rectfill(0,0,127,127,1)
 spr(1,px,py)

 if rx > 0 and ry > 0 then
  pset(rx,ry,7)
 end
end

